              {
                "component": "Heading",
                "type": "h4",
                "text": {
                  "en": "Delighters",
                  "jp": "フィードバック"
                }
              },
              {
                "component": "SquareFrame",
                "data": [
                  {
                    "component": "Image",
                    "type": "",
